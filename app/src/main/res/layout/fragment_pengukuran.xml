<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.pengukuran.PengukuranFragment">

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="5dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:text="Progres Pengukuran"
        android:textSize="20dp"/>

    <ImageView
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginVertical="50dp"
        android:src="@drawable/pengukuran_progres" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginVertical="160dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_Pengukuran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:layout_marginVertical="15dp"
            android:layout_marginEnd="5dp"
            android:text="0"
            android:textColor="#F67B71"
            android:textSize="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:textColor="#F67B71"
            android:text="BPM"
            android:textSize="30dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="397dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="-50dp"
        android:background="@drawable/button_shape2"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/text_Dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="15dp"
            android:layout_marginEnd="5dp"
            android:text=""
            android:textSize="40dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="5dp"
            android:text="Catatan"
            android:textColor="#F67B71"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="5dp"
            android:text="Sebelum klik mulai"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="5dp"
            android:text="pastikan ujung jari sudah"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="30dp"
            android:text="menempel pada sensor"
            android:textSize="20dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pengukuran"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:backgroundTint="#F67B71"
            android:text="Mulai pengukuran"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:cornerRadius="15dp" />

    </LinearLayout>


</RelativeLayout>